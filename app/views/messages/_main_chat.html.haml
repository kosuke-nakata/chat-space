.main-chat 
  .main-header
    .main-header__left-content
      .main-header__left-content__user-group
        = @group.name
      .main-header__left-content__member
        %p Member : 
        -@group.users.each do |user|
          = user.name
    .main-header__edit 
      = link_to edit_group_path(@group), class: "main-header__edit__btn__edit" do
        Edit

  .messages
    = render @messages
  .form
    = form_for [@group, @message] do |f|
      .new_message
        = f.text_field :content, class: 'form__message', placeholder: 'type a message'
        .form__new_message__inputbox__image
          = f.label :image, class: 'form__mask__image' do
            = icon('far', 'image', class: 'icon')
            = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'new_message__inputbox__send-btn  '